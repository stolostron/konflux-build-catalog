{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "enabledManagers": [
        "tekton"
    ],
    "tekton": {
        "fileMatch": [
            "^pipelines/.*\\.ya?ml$"
        ]
    },
    "schedule": [
        "every weekday"
    ],
    "baseBranches": [
        "main"
    ],
    "rebaseWhen": "behind-base-branch"
}